{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "h",
                "hpp",
                "cc",
                "hh"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json"
            ],
            "server.trace": "verbose",
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls_cache"
                }
            }
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    }
}
